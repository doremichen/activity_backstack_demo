<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 說明內容 -->
    <TextView
        android:id="@+id/text_content_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a back stack demo. You can only input A, B, C, or D as the activity name."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp" />

    <!-- 輸入欄位標籤 -->
    <TextView
        android:id="@+id/text_next_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Activity:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_content_info"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 輸入欄位 -->
    <EditText
        android:id="@+id/edit_next_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter A / B / C / D"
        android:inputType="textCapCharacters"
        app:layout_constraintStart_toEndOf="@id/text_next_class"
        app:layout_constraintTop_toTopOf="@id/text_next_class"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- 顯示 Task ID -->
    <TextView
        android:id="@+id/text_task_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task ID:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edit_next_class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 顯示 Activity instance 資訊 -->
    <TextView
        android:id="@+id/text_act_ins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activity Info:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_task_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Config intent flag 按鈕 -->
    <Button
        android:id="@+id/button_intent_flag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Config Intent Flag"
        android:onClick="onConfigFlag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Next 按鈕 -->
    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="onNavigateToNextActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
