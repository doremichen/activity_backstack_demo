<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/text_task_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Intent flag"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Scrollable Flag Options -->
    <ScrollView
        android:id="@+id/scrollView_flags"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/text_task_id"
        app:layout_constraintBottom_toTopOf="@id/text_flag_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/flag_opt_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CheckBox 項目 -->
            <CheckBox
                android:id="@+id/checkBox_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear flag"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_new_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity New Task"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_clear_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity Clear Top"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_clear_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity Clear Task"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_single_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity Single Top"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_multiple_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity Multiple Task"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_brought_to_fornt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity Brought to Front"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_clear_when_task_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity Clear When Task Reset"
                android:onClick="onCheckBoxClicked" />

            <CheckBox
                android:id="@+id/checkBox_no_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flag Activity No Animation"
                android:onClick="onCheckBoxClicked" />

        </LinearLayout>
    </ScrollView>

    <!-- Flag Info -->
    <TextView
        android:id="@+id/text_flag_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flag value: "
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/button_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- OK Button -->
    <Button
        android:id="@+id/button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textAllCaps="false"
        android:onClick="onSetFlagOk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>
