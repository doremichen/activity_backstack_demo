<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_task_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_backstack_intent_flag_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Scrollable Flag Options -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_flags"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_task_id"
        app:layout_constraintBottom_toTopOf="@id/text_flag_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        android:padding="12dp">
        <ScrollView
            android:id="@+id/scrollView_flags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/flag_opt_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/colorOnSurfaceVariant"
                android:divider="?android:attr/listDivider"
                android:showDividers="middle">

                <!-- CheckBox item -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_clear_flag_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_new_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_new_task_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_clear_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_clear_top_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_clear_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_clear_task_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_single_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_single_top_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_multiple_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_multiple_task_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_brought_to_fornt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_brought_to_front_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_clear_when_task_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_clear_when_task_reset_item"
                    android:onClick="onCheckBoxClicked" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox_no_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_backstack_flag_activity_no_animation_item"
                    android:onClick="onCheckBoxClicked" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Flag Info -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_flag_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_backstack_flag_value_info"
        android:textSize="18sp"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/button_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- OK Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_backstack_apply_flags_btn"
        android:textAllCaps="false"
        android:onClick="onSetFlagOk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
