<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Toolbar (for menu) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        android:background="?attr/colorPrimaryVariant"
        android:gravity="center"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/ToolbarTitleTextStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_backstack_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#1E293B"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Card container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_backstack_standard_btn"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#3B82F6"
                android:onClick="onLaunchStandardActivity"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_backstack_singletop_btn"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#6366F1"
                android:onClick="onLaunchSingleTopActivity"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_backstack_singletask_btn"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#10B981"
                android:onClick="onLaunchSingleTaskActivity"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_backstack_singleinstance_btn"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#F59E0B"
                android:onClick="onLaunchSingleInstanceActivity"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_backstack_intent_flag_btn"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#EF4444"
                android:onClick="onLaunchDemoActivity" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
